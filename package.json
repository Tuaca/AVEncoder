{
  "name": "avencoder",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Camelia Unieta",
  "license": "ISC",
  "devDependencies": {
    "electron": "^24.1.3",
    "electron-builder": "^23.6.0",
    "ffmpeg-static": "^5.1.0"
  },
  "dependencies": {
    "fluent-ffmpeg": "^2.1.2"
  },
  "build": {
    "appId": "com.avencoder.unieta",
    "productName": "AVEncoder",
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "dmg": {
      "contents": [
        {
          "type": "link",
          "path": "/Applications",
          "x": 410,
          "y": 150
        },
        {
          "type": "file",
          "x": 130,
          "y": 150
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "reset5.css",
      "dist/index.html",
      "dist/index.css",
      "dist/index.js",
      "node_modules/fluent-ffmpeg/**/*",
      "node_modules/ffmpeg-static/**/*"
    ]
  }
}